#coding=utf8
import itchat
import time,random

itchat.auto_login(hotReload=True)
#返回完整的公众号列表
mps = itchat.get_mps()
## 获取名字中含有特定字符的公众号，也就是按公众号名称查找,返回值为一个字典的列表
mps = itchat.search_mps(name=u'环球礼仪')
print(mps)
#发送方法和上面一样
userName = mps[0]['UserName']
for i in range(100):
    itchat.send(u"抽奖",toUserName = userName)
    # print('success')
    time.sleep(random.randint(3, 10))
